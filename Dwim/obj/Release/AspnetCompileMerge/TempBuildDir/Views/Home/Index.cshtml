<div ng-controller="ChattingController">
    <div class="jumbotron" id="chat-window">
        <section class="panel panel-main" style="margin-bottom: 0">
            <div class="panel-heading window-head">
                <div class="row">
                    <div class="col-md-6">
                        <center>Corrected Message to receiver</center>
                    </div>
                    <div class="col-md-6">
                        <center>Original Message</center>
                    </div>
                </div>
            </div>
            <div class="panel-body" id="content">
                <div class="row">
                    <div class="col-md-6" id="left-content">

                    </div>
                    <div class="col-md-6" id="right-content"></div>
                </div>
            </div>
            <div class="panel-footer candidates-box" id="candidates" ng-show="correctPrompt">
                <div class="row candidates">
                    <div ng-repeat="candidate in candidates" ng-if="$index < 3">
                        <div class="col-md-4 candidate" ng-click="correctSentence(candidate)" tabindex="{{$index + 10}}" ng-keypress="keyPressOnDiv($event, candidate)">
                            <span class="candidate-text">{{candidate}}</span>
                            <div class="circle"><span class="glyphicon glyphicon-ok selection"></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="form-group" style="margin-top: 0">
            <div class="input-text">
                <textarea placeholder="" ng-model="userInputs" ng-keypress="keyPressOnTextarea($event, userInputs)" tabindex="-1"></textarea>
            </div>
            <button class="btn btn-primary" id="send-btn" ng-click="sendText(userInputs)" tabindex="-1">send</button>
        </div>
        <div></div>
    </div>

    <hr />
    <div class="row" id="tips">
        <div>
            Tips:
            <ul>
                <li>
                    Automatic misspelling and orthographic correction, i.e. "i and my friend goes to schol" --> "my friend and i go to school"
                </li>
            </ul>
        </div>
        <a href="https://garagehackbox.azurewebsites.net/hackathons/761/projects/38781" class="btn btn-info" id="like-btn" tabindex="-1">
            <span class="glyphicon glyphicon-heart"></span> Like Us
        </a>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/bundles/chatting")
}
